<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" verbose="1">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Read Operations">
        <classes>
            <class name="tests.GetBookingTests"/>
        </classes>
    </test>

    <test name="Create Operations">
        <classes>
            <class name="tests.CreateBookingTests"/>
        </classes>
    </test>

    <test name="Update and Delete Operations">
        <classes>
            <class name="tests.UpdateBookingTests"/>
            <class name="tests.DeleteBookingTests"/>
        </classes>
    </test>

    <test name="Authentication Tests">
        <classes>
            <class name="tests.AuthTests"/>
            <class name="tests.NegativeAuthTests"/>
        </classes>
    </test>

</suite>